<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Bonsoir
			{% endblock %}
		</title>
		<link rel="icon" href="/assets/images/favicon.png">
		{% block stylesheet %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
		{% endblock %}
	</head>

	<body>
		{% block content %}
			<nav class="navbar navbar-light bg-light">
				<div class="container-fluid">
					<a class="navbar-brand" href="#">Navbar</a>
				</div>
			</nav>
			<main class="container-fluid">
				<div class="row">
					{% for product in products %}
						<div class="col-sm-12 col-md-4">
							<div class="card m-3">
								<div class="card-body">
									<h5 class="card-title">{{product}}</h5>
									<h6 class="card-subtitle mb-2 text-muted">{{product}}</h6>
									<p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
				<div class="row m-3">
					<form action="upload.php" enctype="multipart/form-data" method="post">
						<div class="col-xs-12 input-group">
							<input id="upload" name="files[]" type="file" class="form-control" multiple/>
							<button class="btn btn-outline-secondary" type="submit" name="upload">Upload</button>
						</div>
					</form>
				</div>
				<div class="row m-3">
					{% block imageCards %}
						{% for item in itemList %}
							<div class="col-xs-12 col-md-6 col-lg-4 my-3">
								<div class="card" style="width: 18rem;">
									<img src="{{item}}" class="card-img-top" alt="{{item}}">
									<div class="card-body">
										<a href="" class="btn btn-danger">Delete</a>
									</div>
								</div>
							</div>
						{% endfor %}
					{% endblock %}
				</div>
			</main>
		{% endblock %}
		{% block javascript %}

			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
		{% endblock %}
	</body>
</html></body></html>
